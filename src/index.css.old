@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Sora:wght@600;700&family=JetBrains+Mono:wght@400;500&display=swap');

:root {
  --bg: #0a192f;
  --bg-light: #112240;
  --bg-lighter: #1a2e50;
  --panel: rgba(255, 255, 255, 0.02);
  --panel-hover: rgba(255, 255, 255, 0.05);
  --text: #e6f1ff;
  --text-bright: #ccd6f6;
  --muted: #8892b0;
  --muted-light: #a8b2d1;
  --border: rgba(204, 214, 246, 0.1);
  --accent: #64ffda;
  --accent-glow: rgba(100, 255, 218, 0.2);
  --accent-2: #a78bfa;
  --accent-2-glow: rgba(167, 139, 250, 0.2);
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.15);
  --shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 20px 50px rgba(0, 0, 0, 0.4);
  --radius-sm: 4px;
  --radius: 8px;
  --radius-lg: 12px;
  --header-bg: rgba(10, 25, 47, 0.9);
  --glow: 0 0 20px var(--accent-glow);
  --transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
}

[data-theme='light'] {
  --bg: #f8fafc;
  --bg-light: #ffffff;
  --bg-lighter: #e2e8f0;
  --panel: rgba(15, 23, 42, 0.03);
  --panel-hover: rgba(15, 23, 42, 0.06);
  --text: #0f172a;
  --text-bright: #1e293b;
  --muted: #475569;
  --muted-light: #64748b;
  --border: rgba(15, 23, 42, 0.12);
  --accent: #0d9488;
  --accent-glow: rgba(13, 148, 136, 0.15);
  --accent-2: #8b5cf6;
  --accent-2-glow: rgba(139, 92, 246, 0.15);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
  --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.12);
  --header-bg: rgba(255, 255, 255, 0.9);
  --glow: 0 0 20px var(--accent-glow);
}

* {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--bg);
  color: var(--text-bright);
  min-height: 100vh;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

a {
  color: inherit;
  text-decoration: none;
  transition: var(--transition);
}

p {
  color: var(--muted-light);
  line-height: 1.7;
  margin: 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0;
  font-family: 'Sora', 'Inter', sans-serif;
  color: var(--text);
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.02em;
}

h1 {
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 700;
}

h2 {
  font-size: clamp(1.75rem, 4vw, 2.5rem);
  font-weight: 700;
}

h3 {
  font-size: clamp(1.25rem, 2.5vw, 1.5rem);
  font-weight: 600;
}

code,
.mono {
  font-family: 'JetBrains Mono', 'Courier New', monospace;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

#root {
  min-height: 100vh;
}

::selection {
  background-color: var(--accent-glow);
  color: var(--accent);
}

:focus-visible {
  outline: 2px solid var(--accent);
  outline-offset: 3px;
}

@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
